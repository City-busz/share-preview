<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="CardWidget" parent="GtkBox">
    <child>
      <object class="GtkStack" id="stack">
        <property name="hhomogeneous">false</property>
        <!-- Facebook Card -->
        <child>
          <object class="GtkStackPage">
            <property name="name">facebook</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">6</property>
                <property name="hexpand">true</property>
                <property name="valign">center</property>
                <style>
                  <class name="card"/>
                </style>
                <child>
                  <object class="GtkPicture" id="fb_image">
                    <property name="visible">false</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="fb_site">
                    <property name="xalign">0</property>
                    <style>
                      <class name="caption"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="fb_title">
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <property name="lines">2</property>
                    <property name="wrap">true</property>
                    <property name="wrap-mode">word</property>
                    <style>
                      <class name="title-4"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="fb_description">
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <!-- Mastodon Card -->
        <child>
          <object class="GtkStackPage">
            <property name="name">mastodon</property>
            <property name="child">
              <object class="GtkBox">
                <property name="spacing">6</property>
                <property name="hexpand">true</property>
                <property name="valign">center</property>
                <style>
                  <class name="card"/>
                </style>
                <child>
                  <object class="GtkPicture" id="ms_image">
                    <property name="visible">false</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkLabel" id="ms_title">
                        <property name="xalign">0</property>
                        <property name="ellipsize">end</property>
                        <style>
                          <class name="title-4"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="ms_site">
                        <property name="xalign">0</property>
                        <style>
                          <class name="caption"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>                
              </object>
            </property>
          </object>
        </child>
        <!-- Twitter Summary Card -->
        <child>
          <object class="GtkStackPage">
            <property name="name">twitter-1</property>
            <property name="child">
              <object class="GtkBox">
                <property name="spacing">6</property>
                <property name="hexpand">true</property>
                <property name="valign">center</property>
                <style>
                  <class name="card"/>
                </style>
                <child>
                  <object class="GtkPicture" id="tw1_image">
                    <property name="visible">false</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkLabel" id="tw1_title">
                        <property name="xalign">0</property>
                        <property name="ellipsize">end</property>
                        <style>
                          <class name="title-4"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="tw1_description">
                        <property name="xalign">0</property>
                        <property name="ellipsize">end</property>
                        <property name="lines">3</property>
                        <property name="wrap">true</property>
                        <property name="wrap-mode">word</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="tw1_site">
                        <property name="xalign">0</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>                
              </object>
            </property>
          </object>
        </child>
        <!-- Twitter Summary Large Image Card -->
        <child>
          <object class="GtkStackPage">
            <property name="name">twitter-2</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">6</property>
                <property name="hexpand">true</property>
                <property name="valign">center</property>
                <style>
                  <class name="card"/>
                </style>
                <child>
                  <object class="GtkPicture" id="tw2_image">
                    <property name="visible">false</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="tw2_title">
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="title-4"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="tw2_description">
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <property name="lines">2</property>
                    <property name="wrap">true</property>
                    <property name="wrap-mode">word</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="tw2_site">
                    <property name="xalign">0</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child> 
  </template>
</interface>